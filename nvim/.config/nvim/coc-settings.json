{
    "go.checkForUpdates": "disabled",
    "go.goplsUseDaemon": false,
    "go.goplsOptions": {
        "usePlaceholders": true,
        "semanticTokens": true,
        "hints": {
            "compositeLiteralFields": true,
            "compositeLiteralTypes": true,
            "assignVariableTypes": true,
            "parameterNames": true,
            "functionTypeParameters": true,
            "constantValues": true,
            "rangeVariableTypes": true
        }
    },
    "inlayHint.enable": false,
    "semanticTokens.enable": true,
    "clangd.arguments": [
        "--function-arg-placeholders=1",
        "--background-index",
        "-j=15",
        "--clang-tidy",
        "--clang-tidy-checks=performance-*,bugprone-*",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory"
    ],
    "rust-analyzer.server.path": "~/.cargo/bin/rust-analyzer",
    "suggest.virtualText": true,
    "suggest.enablePreselect": true,
    "suggest.noselect": false,
    "coc.source.buffer.enable": false,
    "coc.source.file.shortcut": "FILE",
    "coc.source.around.shortcut": "CUR_BUF",
    "signature.enable": false,
    "signature.hideOnTextChange": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.enableMessage": "never",
    "git.enableGlobalStatus": false,
    "git.realtimeGutters": true,
    "git.semanticCommit.scope": false,
    "git.conflict.enabled": false,
    "git.addedSign.hlGroup": "GitSignsAdd",
    "git.changedSign.hlGroup": "GitSignsChange",
    "git.removedSign.hlGroup": "GitSignsDelete",
    "pairs.enableCharacters": [
        "(",
        "[",
        "{",
        "'",
        "\"",
        "`"
    ],
    "outline.sortBy": "position",
    "outline.expandLevel": 3,
    "outline.splitCommand": "botright 60vs",
    "tree.key.toggle": "o",
    "list.height": 22,
    "list.source.files.defaultOptions": [
        "--auto-preview"
    ],
    "list.source.lines.defaultOptions": [
        "--auto-preview",
        "--interactive",
        "--ignore-case"
    ],
    "list.source.grep.defaultOptions": [
        "--auto-preview",
        "--interactive"
    ],
    "list.source.grep.args": [
        "--smart-case"
    ],
    "list.insertMappings": {
        "<C-r>": "do:refresh",
        "<C-n>": "normal:j",
        "<C-p>": "normal:k",
        "<Tab>": "do:toggle",
        "<A-a>": "do:selectall",
        "<c-f>": "do:chooseaction"
    },
    "list.normalMappings": {
        "<C-r>": "do:refresh",
        "<C-n>": "normal:j",
        "<C-p>": "normal:k",
        "q": "do:exit",
        "<Tab>": "do:toggle",
        "<A-a>": "do:selectall",
        "<c-f>": "do:chooseaction"
    },
    "explorer.git.enable": false,
    "explorer.file.reveal.whenOpen": false,
    "explorer.filename.colored.enable": false,
    "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
    "explorer.keyMappings.global": {
        "f": "searchRecursive",
        "th": "toggleHidden",
        "<c-v>": "open:vsplit",
        "<cr>": [
            "wait",
            "expandable?",
            "expand",
            "open"
        ]
    },
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "snippets.ultisnips.pythonPrompt": false
}
